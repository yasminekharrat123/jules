{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@config/*": ["src/config/*"],
      "@routes/*": ["src/routes/*"]
    }
  },
  "include": [
    "src/**/*",
    "seeds",
    "kysely.config.ts",
    "migrations",
    "controllers"
  ],
  "exclude": ["node_modules"]
}
