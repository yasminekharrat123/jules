{
  "name": "api",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/src/index.js",
    "migrate": "kysely migrate:latest",
    "format:check": "prettier -c .",
    "format:fix": "prettier -w .",
    "lint:check": "eslint .",
    "lint:fix": "eslint --fix .",
    "typecheck": "tsc --noEmit",
    "check:all": "npm run format:check && npm run lint:check && npm run typecheck",
    "fix:all": "npm run format:fix && npm run lint:fix && npm run typecheck"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.0",
    "dotenv": "^17.2.1",
    "hono": "^4.9.2",
    "kysely": "^0.28.5",
    "pg": "^8.16.3",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@faker-js/faker": "^9.9.0",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.5",
    "eslint": "^9.33.0",
    "kysely-ctl": "^0.17.0",
    "prettier": "^3.6.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.39.1"
  }
}
